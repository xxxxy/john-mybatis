<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.john.mapper.UserMapper">
    <select id="getUserById" resultType="user" databaseId="">
        select *
        from test_user
        where id = #{id}
    </select>

    <insert id="addUser" parameterType="com.john.bean.User">
        insert into test_user(name, gender, email, last_name)
        values (#{name}, #{gender}, #{email}, #{lastName})
    </insert>
    <update id="updateUser" parameterType="com.john.bean.User">
        update test_user set
        `gender` = #{gender},
        `email` = #{email},
        `last_name` = #{lastName}
        where id = #{id}
    </update>

    <delete id="deleteUser" parameterType="int">
        delete from test_user where id = #{id}
    </delete>
</mapper>